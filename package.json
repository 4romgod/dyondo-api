{
  "name": "@dyondo/api",
  "version": "1.0.0",
  "description": "Backend API for Dyondo muliti-user blogging platform",
  "main": "./src/index.js",
  "scripts": {
    "dev": "npm run build-model && nodemon src/server.js",
    "start": "npm run build-model && node src/server.js",
    "test": "./node_modules/mocha/bin/mocha test/**/*.js -r dotenv/config --reporter mochawesome --reporter-options reportDir=test-results,reportFilename=test-results --exit",
    "clean": "rm -rf node_modules && rm -rf build/",
    "lint": "eslint lib/* test/* --ext .ts --fix",
    "build-model": "npm run merge-model && npm run validate-model",
    "merge-model": "(mkdir -p build && cd build && mkdir -p swagger)  && swagger-merger -i configuration/swagger/dyondo.yaml -o build/swagger/dyondo.api.yaml --debug",
    "validate-model": "swagger-cli validate build/swagger/dyondo.api.yaml"
  },
  "author": "Ebenezer Mathebula",
  "license": "ISC",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@sendgrid/mail": "^7.6.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-validator": "^6.5.0",
    "formidable": "^2.0.1",
    "google-auth-library": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.16",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.8",
    "nodemailer-smtp-transport": "^2.4.2",
    "nodemon": "^2.0.4",
    "query-string": "^6.12.1",
    "shortid": "^2.2.8",
    "slugify": "^1.4.0",
    "string-strip-html": "^4.4.7",
    "swagger-merger": "^1.5.4",
    "xml": "^1.0.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.2.0",
    "mochawesome": "^7.0.1",
    "mongodb-memory-server": "^8.3.0"
  }
}
